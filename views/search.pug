extends layout.pug

block content
    h1 Search Results
    p#pageHeader

    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href="/books/" + book.id)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
        p
          a(class='button' href='/books') Home
    script(src='/static/javascripts/script.js', type="text/javascript")
